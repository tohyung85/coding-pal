<div class='col-xs-10 col-xs-offset-1'>
  <h1>Update Profile</h1>
  <br/>
  <% if @profile.avatar.present? %>
    <%= image_tag @profile.avatar, class: 'profile-image' %>
  <% else %>
    <%= image_tag 'profile_image_placeholder.png', class: 'profile-image' %>
  <% end %>
  <br/><br/>
  <%= simple_form_for @profile, url: profile_path(current_user) do |f| %>
    <%= f.input :avatar %>
    <br/>
    <%= f.input :user_name %>
    <br/>
    <%= f.input :country, priority: ['United States', 'Australia', 'Singapore'] %>  
    <br/>
    <%= f.input :time_zone, priority: /Australia|US|Singapore/ %>
    <br/>    
    <%= f.input :description%>
    <br/>
    <%= f.input :remote_ok?%>
    <br/>
    <%= f.submit 'Update Profile', class: 'btn btn-primary' %>
  <% end %>
</div>