<%= javascript_include_tag 'jquery.fullPage.min' %>
<%= javascript_include_tag 'landing_page' %>

<button type="button" class="btn btn-default suggestion-box" aria-label="Left Align" data-toggle="modal" data-target="#myModal">
  <span class="suggestion-box-text glyphicon glyphicon-envelope" aria-hidden="true"></span>
  <p class='suggestion-box-text suggestion-text'>Suggestions Welcome!</p>
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Any Suggestions?</h4>
      </div>
      <div class="modal-body">
        <%= simple_form_for @suggestion, url: suggestions_path do |f| %>
          <%= f.input :user_email %>
          <%= f.input :title %>
          <%= f.input :description %>
      </div>
      <div class="modal-footer">
          <%= f.submit 'Send', class: 'btn btn-primary' %>
        <% end %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<div id='fullpage'>

  <div class='page-inner-contents first-section section'>
    <div class='page-inner-contents-header page'>

      <h1>Coding Pals</h1>
      <br/>
      <p>No matter what courses you take or what projects you are working on, coding isn't easy</p>
      <p>Find someone to learn it with</p>    
      <br/>
      <%= link_to 'Partner Up Today!', new_user_registration_path, class: 'btn btn-primary btn-lg' %>
    </div>  
  </div>

  <div class='page-contents-description page section'>
    <div class='page-inner-contents-header'>
      <h1> Create or Join a Study Group!</h1>
      <%= image_tag 'groups_image.png' %>
    </div>
  </div>

  <div class='page-contents-individual-group page section'>
    <div class='page-inner-contents-header'>
      <h1>Share ideas and set up your meetings</h1>
      <%= image_tag 'single_group_image.png', class: 'single-group-image' %>
    </div>
  </div>

  <div class='page-inner-contents last-section section'>
    <div class='page-inner-contents-header page'>
      <h1>Coding Pals</h1>
      <br/>
      <p>It's a long and tough journey ahead</p>
      <p>Don't do it alone</p>
      <br/>
      <%= link_to 'Sign Up Today!', new_user_registration_path, class: 'final-sign-up' %>
    </div>  
  </div>

</div>