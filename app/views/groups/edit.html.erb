<div class='col-xs-10 col-xs-offset-1'>
  <div class='edit-group-contents'>
    <h1>Edit Group Details</h1>
    <%= simple_form_for @group do |f|%>
      <%= f.input :name %>
      <br/>
      <%= f.input :course %>      
      <br/>
      <%= f.input :country, priority: ['United States', 'Australia', 'Singapore'] %>  
      <br/>
      <%= f.input :time_zone, priority: /Australia|US|Singapore/ %>
      <br/>      
      <%= f.input :commitment_hours %>
      <br/>
      <%= f.input :remote %>
      <br/>
      <%= f.input :description %>
      <br/>
      <%= f.input :image %>      
      <br/>

      <%= f.submit 'Apply Changes', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

