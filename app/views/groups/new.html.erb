<div class='col-xs-10 col-xs-offset-1'>
  <div class='new-group-contents'>
    <h1>Enter Group Details</h1>
    <%= simple_form_for @group do |f|%>
      <%= f.input :name %>
      <br/>
      <%= f.input :course %>      
      <br/>
      <%= f.input :commitment_hours %>
      <br/>
      <%= f.input :remote %>
      <br/>
      <%= f.input :description %>
      <br/>
      <%= f.input :image %>      
      <br/>

      <%= f.submit 'Create Group', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

